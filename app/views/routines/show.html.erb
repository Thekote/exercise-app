<div id="routine">
  <table>
    <thead>
      <tr>
        <th><strong>Exercise name</strong></th>
        <th><strong>Exercise description</strong></th>
        <th><strong>Exercise power level</strong></th>  
        <tr>
          <th colspan="3"><%= @routine.name %></th>
        </tr>
      </tr>
    </thead>
    <tbody>
      <% @routine.exercises.each do |exercise| %>
        <tr>
          <td><%= exercise.name %></td>
          <td><%= exercise.description %></td>
          <td><%= exercise.power_level %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= link_to "Edit this routine", edit_routine_path(@routine) %> |
  <%= link_to "Back to routines", routines_path %>

  <%= button_to "Destroy this routine", @routine, method: :delete %>
</div>
